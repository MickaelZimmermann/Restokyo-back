{% extends 'base.html.twig' %}

{% block title %}Liste des quartiers{% endblock %}

{% block body_back %}

    <h1>Liste des quartiers</h1>

    <a href="{{ path('back_district_new') }}" class="btn btn-warning mb-2">Ajouter un quartier</a>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Kanji</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for district in districts %}
            <tr>
                <td>{{ district.id }}</td>
                <td><a href="{{ path('back_district_show', {'id': district.id}) }}">{{ district.name }}</a></td>
                <td><a href="{{ path('back_district_show', {'id': district.id}) }}">{{ district.kanji }}</a></td>
                <td>
                    <a href="{{ path('back_district_show', {'id': district.id}) }}" class="btn btn-sm btn-primary">DÃ©tails</a>
                    <a href="{{ path('back_district_edit', {'id': district.id}) }}" class="btn btn-sm btn-success">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
{% endblock %}
