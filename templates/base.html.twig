<!doctype html>
<html lang="fr">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <!-- Bootstrap icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">

    <!-- Our custom CSS -->
    <link rel="stylesheet" href="{{ asset('html-css/style.css') }}">
    <!-- CSS custor for project ResTokyo -->
    <link rel="stylesheet" href="{{ asset('html-css/restokyo.css') }}">
    <!-- favicon -->
    <link rel="shortcut icon" href="{{ asset('favicon.png') }}" type="image/x-icon">

    <title>{% block title %}{% endblock %} - ResTokyo</title>
</head>

<body>

    <!-- Sous-nav (back-office) -->
    {% block subnav %}
    
        <nav class="navbar navbar-expand-lg">
        <a href="{{ path('menu') }}"><img class="navbar-brand flex-start mh-100 p-3" style="width: 150px; height: 150px;" src="{{ asset('images/logo.png') }}" alt=""></a>
        <ul class="nav container justify-content-end">
            <li class="nav-item">
                <a class="nav-link" href="https://restokyo.surge.sh/">Accès ResTokyo</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('back_district_index') }}">Quartiers</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('back_establishment_index') }}">Restaurants et Izakaya</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('app_back_tag') }}">Spécialités</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('back_user_index') }}">Utilisateurs</a>
            </li>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            {% if is_granted('ROLE_ADMIN') %}
                <li class="nav-item">
                    <span class="nav-link disabled">{{ app.user.pseudo }}</span>
                </li>
            {% endif %}
            <li class="nav-item">
                <a class="nav-link" href="{{ path('logout') }}">Déconnexion</a>
            </li>        
        {% endif %}
        </ul>
        </nav>
    {% endblock %}

    <!-- main -->
    {% block body %}{% block body_back %}{% endblock %}{% endblock %}

    <!-- footer -->
    {# <footer class="container-fluid py-4 border-top text-center">
        
    </footer> #}

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ"
        crossorigin="anonymous"></script>
</body>

</html>