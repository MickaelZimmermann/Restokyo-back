{% extends 'base.html.twig' %}

{% block title %}Liste des spécialités{% endblock %}

{% block body_back %}

    <h1>Liste des spécialités</h1>

    <a href="{{ path('back_tag_new') }}" class="btn btn-warning mb-2">Ajouter une spécialité</a>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tag in tags %}
            <tr>
                <td>{{ tag.id }}</td>
                <td>{{ tag.name }}</td>
                <td>
                    <a href="{{ path('back_tag_show', {'id': tag.id}) }}" class="btn btn-sm btn-primary">Détails</a>
                    <a href="{{ path('back_tag_edit', {'id': tag.id}) }}" class="btn btn-sm btn-success">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
{% endblock %}
